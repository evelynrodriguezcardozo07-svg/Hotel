<div class="min-h-screen bg-gray-50">
  <!-- Loading -->
  <div *ngIf="loading" class="text-center py-12">
    <div class="inline-block animate-spin rounded-full h-12 w-12 border-b-2 border-primary-600"></div>
    <p class="mt-4 text-gray-600">Cargando información del hotel...</p>
  </div>

  <!-- Detalle del hotel -->
  <div *ngIf="!loading && hotel" class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <!-- Botón volver -->
    <button
      (click)="goBack()"
      class="mb-6 flex items-center text-gray-600 hover:text-primary-600 transition-colors"
    >
      <svg class="h-5 w-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
      </svg>
      Volver a la lista
    </button>

    <!-- Imagen principal -->
    <div class="mb-8 rounded-xl overflow-hidden shadow-lg">
      <div class="h-96 bg-gradient-to-br from-primary-400 to-primary-600 flex items-center justify-center">
        <img *ngIf="hotel.imagen" [src]="hotel.imagen" [alt]="hotel.nombre" class="w-full h-full object-cover">
        <svg *ngIf="!hotel.imagen" class="h-32 w-32 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
        </svg>
      </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      <!-- Información principal -->
      <div class="lg:col-span-2">
        <div class="bg-white rounded-xl shadow-md p-6 mb-6">
          <!-- Header -->
          <div class="mb-6">
            <div class="flex items-start justify-between mb-2">
              <h1 class="text-3xl font-display font-bold text-gray-900">{{ hotel.nombre }}</h1>
              <span *ngIf="hotel.destacado" class="bg-accent-400 text-white px-3 py-1 rounded-full text-sm font-semibold">
                ⭐ Destacado
              </span>
            </div>
            <div class="flex items-center text-yellow-400 text-xl mb-3">
              <span *ngFor="let star of getStarsArray(hotel.estrellas)">⭐</span>
            </div>
            <div class="flex items-center text-gray-600">
              <svg class="h-5 w-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
              <span>{{ hotel.direccion.calle }}, {{ hotel.direccion.ciudad }}, {{ hotel.direccion.estadoProvincia }}, {{ hotel.direccion.pais }}</span>
            </div>
          </div>

          <!-- Puntuación -->
          <div *ngIf="hotel.totalReviews > 0" class="flex items-center mb-6 pb-6 border-b border-gray-200">
            <div class="bg-primary-600 text-white px-4 py-2 rounded-lg text-2xl font-bold mr-4">
              {{ hotel.puntuacionPromedio | number:'1.1-1' }}
            </div>
            <div>
              <p class="font-semibold text-gray-900">Excelente</p>
              <p class="text-gray-600 text-sm">{{ hotel.totalReviews }} opiniones</p>
            </div>
          </div>

          <!-- Descripción -->
          <div class="mb-6">
            <h2 class="text-xl font-semibold text-gray-900 mb-3">Acerca de este hotel</h2>
            <p class="text-gray-700 leading-relaxed">{{ hotel.descripcion }}</p>
          </div>

          <!-- Información adicional -->
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div class="flex items-center">
              <svg class="h-5 w-5 text-primary-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
              </svg>
              <span class="text-gray-700">{{ hotel.telefono }}</span>
            </div>
            <div class="flex items-center">
              <svg class="h-5 w-5 text-primary-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
              </svg>
              <span class="text-gray-700">{{ hotel.emailContacto }}</span>
            </div>
          </div>
        </div>

        <!-- Propietario -->
        <div class="bg-white rounded-xl shadow-md p-6">
          <h2 class="text-xl font-semibold text-gray-900 mb-4">Propietario</h2>
          <div class="flex items-center">
            <div class="h-12 w-12 bg-primary-100 rounded-full flex items-center justify-center mr-4">
              <span class="text-primary-600 font-semibold text-lg">{{ hotel.propietario.nombre.charAt(0) }}</span>
            </div>
            <div>
              <p class="font-semibold text-gray-900">{{ hotel.propietario.nombre }}</p>
              <p class="text-gray-600 text-sm">{{ hotel.propietario.email }}</p>
            </div>
          </div>
        </div>
      </div>

      <!-- Sidebar - Búsqueda de disponibilidad -->
      <div class="lg:col-span-1">
        <div class="bg-white rounded-xl shadow-md p-6 sticky top-4">
          <h3 class="text-lg font-semibold text-gray-900 mb-4">Buscar disponibilidad</h3>
          
          <div class="space-y-4">
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">Check-in</label>
              <input
                type="date"
                [(ngModel)]="searchDates.checkin"
                class="w-full border border-gray-300 rounded-lg px-4 py-2"
                [min]="minDate"
              />
            </div>

            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">Check-out</label>
              <input
                type="date"
                [(ngModel)]="searchDates.checkout"
                class="w-full border border-gray-300 rounded-lg px-4 py-2"
                [min]="searchDates.checkin"
              />
            </div>

            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">Huéspedes</label>
              <select
                [(ngModel)]="searchDates.guests"
                class="w-full border border-gray-300 rounded-lg px-4 py-2"
              >
                <option [value]="1">1 huésped</option>
                <option [value]="2">2 huéspedes</option>
                <option [value]="3">3 huéspedes</option>
                <option [value]="4">4 huéspedes</option>
                <option [value]="5">5 huéspedes</option>
                <option [value]="6">6+ huéspedes</option>
              </select>
            </div>

            <button
              (click)="searchAvailability()"
              [disabled]="loadingRooms"
              class="btn-primary w-full"
            >
              <span *ngIf="!loadingRooms">Buscar habitaciones</span>
              <span *ngIf="loadingRooms">Buscando...</span>
            </button>
          </div>

          <div class="mt-6 pt-6 border-t border-gray-200">
            <p class="text-gray-600 text-sm mb-1">Rango de precios</p>
            <div class="flex items-baseline">
              <span class="text-2xl font-bold text-primary-600">${{ hotel.precioMinimo | number:'1.0-0' }}</span>
              <span class="text-gray-500 ml-2">- ${{ hotel.precioMaximo | number:'1.0-0' }}</span>
            </div>
            <p class="text-gray-500 text-sm mt-1">por noche</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Sección de habitaciones -->
    <div class="mt-12">
      <h2 class="text-2xl font-bold text-gray-900 mb-6">Habitaciones disponibles</h2>

      <!-- Loading habitaciones -->
      <div *ngIf="loadingRooms" class="text-center py-12">
        <div class="inline-block animate-spin rounded-full h-8 w-8 border-b-2 border-primary-600"></div>
        <p class="mt-2 text-gray-600">Cargando habitaciones...</p>
      </div>

      <!-- Lista de habitaciones -->
      <div *ngIf="!loadingRooms && availableRooms.length > 0" class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div
          *ngFor="let room of availableRooms"
          class="bg-white rounded-xl shadow-md overflow-hidden hover:shadow-lg transition-shadow"
        >
          <div class="h-48 bg-gradient-to-br from-blue-400 to-blue-600 flex items-center justify-center">
            <svg class="h-20 w-20 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
            </svg>
          </div>

          <div class="p-6">
            <div class="flex items-start justify-between mb-3">
              <div>
                <h3 class="text-lg font-semibold text-gray-900">{{ getRoomType(room).nombre }}</h3>
                <p class="text-gray-600 text-sm">Habitación {{ room.numero }}</p>
              </div>
              <span
                class="px-3 py-1 rounded-full text-xs font-semibold"
                [class.bg-green-100]="room.estado === 'disponible'"
                [class.text-green-800]="room.estado === 'disponible'"
                [class.bg-yellow-100]="room.estado === 'mantenimiento'"
                [class.text-yellow-800]="room.estado === 'mantenimiento'"
              >
                {{ room.estado }}
              </span>
            </div>

            <p class="text-gray-600 text-sm mb-4">{{ getRoomType(room).descripcion }}</p>

            <div class="space-y-2 mb-4">
              <div class="flex items-center text-sm text-gray-700">
                <svg class="h-4 w-4 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                </svg>
                <span>Capacidad: {{ room.capacidad }} personas</span>
              </div>
              <div class="flex items-center text-sm text-gray-700">
                <svg class="h-4 w-4 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
                </svg>
                <span>{{ room.numCamas }} cama(s)</span>
              </div>
              <div *ngIf="room.metrosCuadrados" class="flex items-center text-sm text-gray-700">
                <svg class="h-4 w-4 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 5a1 1 0 011-1h14a1 1 0 011 1v14a1 1 0 01-1 1H5a1 1 0 01-1-1V5z"></path>
                </svg>
                <span>{{ room.metrosCuadrados }} m²</span>
              </div>
            </div>

            <div class="flex items-center justify-between pt-4 border-t border-gray-200">
              <div>
                <p class="text-2xl font-bold text-primary-600">${{ room.precioBase | number:'1.0-0' }}</p>
                <p class="text-gray-500 text-sm">por noche</p>
              </div>
              <button
                (click)="openReservationModal(room)"
                [disabled]="room.estado !== 'disponible'"
                class="btn-primary"
              >
                Reservar
              </button>
            </div>
          </div>
        </div>
      </div>

      <!-- Sin resultados -->
      <div *ngIf="!loadingRooms && availableRooms.length === 0 && searchPerformed" class="text-center py-12">
        <svg class="h-16 w-16 text-gray-400 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <p class="text-gray-600 text-lg">No hay habitaciones disponibles para las fechas seleccionadas</p>
        <p class="text-gray-500 text-sm mt-2">Intenta con otras fechas o menos huéspedes</p>
      </div>
    </div>
  </div>

  <!-- Modal de reserva -->
  <div *ngIf="showReservationModal" class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50 p-4">
    <div class="bg-white rounded-xl shadow-2xl max-w-2xl w-full max-h-[90vh] overflow-y-auto">
      <div class="p-6 border-b border-gray-200">
        <div class="flex items-center justify-between">
          <h3 class="text-2xl font-bold text-gray-900">Confirmar reserva</h3>
          <button
            (click)="closeReservationModal()"
            class="text-gray-400 hover:text-gray-600"
          >
            <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
          </button>
        </div>
      </div>

      <div class="p-6">
        <div *ngIf="selectedRoom" class="mb-6">
          <div class="bg-gray-50 rounded-lg p-4 mb-4">
            <h4 class="font-semibold text-gray-900 mb-2">{{ getRoomType(selectedRoom).nombre }}</h4>
            <p class="text-gray-600 text-sm mb-2">Habitación {{ selectedRoom.numero }}</p>
            <p class="text-gray-700">{{ getRoomType(selectedRoom).descripcion }}</p>
          </div>

          <div class="space-y-4">
            <div class="grid grid-cols-2 gap-4">
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Check-in</label>
                <input
                  type="date"
                  [(ngModel)]="reservationData.fechaCheckin"
                  class="w-full border border-gray-300 rounded-lg px-4 py-2"
                  [min]="minDate"
                  required
                />
              </div>
              <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Check-out</label>
                <input
                  type="date"
                  [(ngModel)]="reservationData.fechaCheckout"
                  class="w-full border border-gray-300 rounded-lg px-4 py-2"
                  [min]="reservationData.fechaCheckin || minDate"
                  required
                />
              </div>
            </div>

            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">Número de huéspedes</label>
              <select
                [(ngModel)]="reservationData.cantidadHuespedes"
                class="w-full border border-gray-300 rounded-lg px-4 py-2"
              >
                <option [value]="i" *ngFor="let i of [1,2,3,4,5,6]">{{ i }} {{ i === 1 ? 'huésped' : 'huéspedes' }}</option>
              </select>
            </div>

            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">Notas especiales (opcional)</label>
              <textarea
                [(ngModel)]="reservationData.notasEspeciales"
                rows="3"
                class="w-full border border-gray-300 rounded-lg px-4 py-2"
                placeholder="Ej: Llegada tarde, cuna para bebé, etc."
              ></textarea>
            </div>

            <!-- Resumen de precios -->
            <div class="bg-gray-50 rounded-lg p-4 space-y-2">
              <div class="flex justify-between text-gray-700">
                <span>${{ selectedRoom.precioBase | number:'1.0-0' }} x {{ calculateNights() }} noche(s)</span>
                <span>${{ selectedRoom.precioBase * calculateNights() | number:'1.0-0' }}</span>
              </div>
              <div class="flex justify-between text-xl font-bold text-gray-900 pt-2 border-t border-gray-300">
                <span>Total</span>
                <span>${{ calculateTotal() | number:'1.0-0' }}</span>
              </div>
            </div>

            <!-- Mensajes -->
            <div *ngIf="reservationMessage" class="bg-green-50 border border-green-200 rounded-lg p-4">
              <p class="text-green-800">{{ reservationMessage }}</p>
            </div>
            <div *ngIf="reservationError" class="bg-red-50 border border-red-200 rounded-lg p-4">
              <p class="text-red-800">{{ reservationError }}</p>
            </div>
          </div>
        </div>
      </div>

      <div class="p-6 border-t border-gray-200 flex justify-end space-x-4">
        <button
          (click)="closeReservationModal()"
          [disabled]="submittingReservation"
          class="px-6 py-2 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50"
        >
          Cancelar
        </button>
        <button
          (click)="submitReservation()"
          [disabled]="submittingReservation || !reservationData.fechaCheckin || !reservationData.fechaCheckout"
          class="btn-primary px-6 py-2"
        >
          <span *ngIf="!submittingReservation">Confirmar reserva</span>
          <span *ngIf="submittingReservation">Procesando...</span>
        </button>
      </div>
    </div>
  </div>
</div>
